{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Scraping",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "ts-node/esm"],
            "args": [
                "${workspaceFolder}/scraper/tests/main/main.ts",
                "${input:scriptArg}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "inputs": [
        {
            "id": "scriptArg",
            "type": "promptString",
            "description": "Enter the type argument (e.g., kiado)",
            "default": "kiado"
        }
    ],
    
    "env": {
        "PWDEBUG": "1"
    }
}